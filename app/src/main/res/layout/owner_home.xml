<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    android:gravity="center_horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/robotobold"
            android:gravity="left"
            android:maxLines="1"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="104dp"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            card_view:srcCompat="@drawable/shed"
            android:paddingLeft="20dp"
            android:layout_marginRight="-15dp"
            />

    </LinearLayout>


    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lumbini Enterprises"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textColor="@color/btnGreen"
        android:fontFamily="@font/robotobold"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:text="Petrol 92 Octane"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:background="@drawable/btn_dark_small"
            android:textColor="@color/white"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:padding="20dp"
            android:elevation="5dp"
            android:id="@+id/petrol92btn"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:text="Petrol 95 Octane"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:background="@drawable/btn_dark_small"
            android:textColor="@color/white"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:padding="20dp"
            android:elevation="5dp"/>

    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:text="Diesel"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:background="@drawable/btn_dark_small"
            android:textColor="@color/white"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:padding="20dp"
            android:elevation="5dp"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_dark_small"
            android:elevation="5dp"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:padding="20dp"
            android:text="Super Diesel"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_dark_small"
        android:elevation="5dp"
        android:fontFamily="@font/robotomedium"
        android:gravity="center"
        android:padding="20dp"
        android:text="Queue Information"
        android:textColor="@color/white"
        android:textSize="15dp" />

</LinearLayout>